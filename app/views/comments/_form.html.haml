%h2= t('comments.add_comment')
= form_with(model: [ @image, @image.comments.build ], local: true) do |form|
  %p
    = form.label  t('comments.comment')
    %br/
    = form.text_area :body, class: "form-control"
    = form.hidden_field :user_id, :value => current_user.id 
  %p
    = form.submit :value => t('comments.comment'), id:"btn-comment"
