            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              Категории
              %span.caret
            %ul.dropdown-menu
              %li
                %a{:href => "#"} Коментария1
              %li
                %a{:href => "#"} Коментария2
              %li
                %a{:href => "#"} Коментария3
              %li
                %a{:href => "#"} Коментария4
              %li
                %a{:href => "#"} Коментария5
          %li
            = link_to 'Images',  images_path
          %li
            = link_to 'Comments', comments_path
