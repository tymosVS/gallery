%h1= @category.title.capitalize
%p= link_to t('posts.new_post'), new_category_post_path() if user_signed_in?

.all-posts
  - @posts.each do |post|
    .post
      .title
        %h2= @images[post].title.capitalize
        = link_to category_post_path(@category, post) do
          .image
            = image_tag(@images[post].image.medium_thumb.url, 
            alt: 'Image', class: 'img-fluid img-thumbnail ')

= paginate @posts, outer_window: 3
