= link_to 'All images', images_path
%h1= @image.title
= image_tag(@image.image.url, alt: 'Image') if @image.image?
%p= link_to 'Edit', edit_image_path(@image)
= render 'comments/comment', image: @image
= render 'comments/form', image: @image
= button_to 'Like', image_fans_path(@image), method: :image
%p
  = @image.fans.count
  = (@image.fans.count) == 1 ? 'Like' : 'Likes'
